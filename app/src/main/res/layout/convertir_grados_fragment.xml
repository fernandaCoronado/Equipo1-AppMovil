<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConvertirGrados.ConvertirGradosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_dise">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="163dp"
                android:layout_height="133dp"
                android:layout_marginTop="72dp"
                android:src="@drawable/ic_convertir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.536"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_conv_grados"
                android:layout_width="271dp"
                android:layout_height="72dp"
                android:layout_marginTop="60dp"
                android:fontFamily="sans-serif-black"
                android:text="Ingresa todos los datos solicitados de forma correcta y completa"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />

            <EditText
                android:id="@+id/id_gradosaconvertir"
                android:layout_width="202dp"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Grados"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_conv_grados" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="153dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Convertir a :"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_gradosaconvertir" />

            <Button
                android:id="@+id/id_conv_min"
                android:layout_width="146dp"
                android:layout_height="57dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:text="MINUTOS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/id_conv_seg"
                android:layout_width="146dp"
                android:layout_height="57dp"
                android:layout_marginTop="4dp"
                android:text="SEGUNDOS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.397"
                app:layout_constraintStart_toEndOf="@+id/id_conv_min"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/id_eliminnar_gra"
                android:layout_width="146dp"
                android:layout_height="57dp"
                android:layout_marginTop="28dp"
                android:text="BORRAR"
                app:icon="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_conv_seg"
                app:layout_constraintVertical_bias="0.059" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>