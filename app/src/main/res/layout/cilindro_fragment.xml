<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cilindro.CilindroFragment">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabhost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent">

                <!-- PERÃMETRO -->
                <LinearLayout
                    android:id="@+id/pest1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/instruccion"
                            android:layout_width="260dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="monospace"
                            android:text="Ingresa todos los datos solicitados de forma correcta y completa"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView" />

                        <EditText
                            android:id="@+id/txtRadioArea"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            android:ems="10"
                            android:hint="Radio del cilindro"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/instruccion" />

                        <EditText
                            android:id="@+id/txtAlturaArea"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="25dp"
                            android:ems="10"
                            android:hint="Altura del cilindro"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtRadioArea" />

                        <Button
                            android:id="@+id/btnBorrarArea"
                            android:layout_width="155dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="22dp"
                            android:drawableLeft="@drawable/ic_delete"
                            android:text="Borrar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/unidadArea" />

                        <Button
                            android:id="@+id/btnArea"
                            android:layout_width="155dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="22dp"
                            android:drawableLeft="@drawable/ic_calculate"
                            android:text="Calcular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/unidadArea" />

                        <TextView
                            android:id="@+id/tvArea"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="12dp"
                            android:text="hola"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.495"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btnBorrarArea"
                            app:layout_constraintVertical_bias="0.57" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="120dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_cilindro"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/unidadArea"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="25dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.502"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtAlturaArea" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <!-- VOLUMEN -->
                <LinearLayout
                    android:id="@+id/pest2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/instruccion2"
                            android:layout_width="260dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="monospace"
                            android:text="Ingresa todos los datos solicitados de forma correcta y completa"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                        <EditText
                            android:id="@+id/txtRadioVolumen"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            android:ems="10"
                            android:hint="Radio del cilindro"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/instruccion2" />

                        <EditText
                            android:id="@+id/txtAlturaVolumen"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="25dp"
                            android:ems="10"
                            android:hint="Altura del cilindro"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtRadioVolumen" />

                        <Button
                            android:id="@+id/btnBorrarVolumen"
                            android:layout_width="155dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="35dp"
                            android:layout_marginTop="22dp"
                            android:drawableLeft="@drawable/ic_delete"
                            android:text="Borrar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/unidadVolumen" />

                        <Button
                            android:id="@+id/btnVolumen"
                            android:layout_width="155dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="22dp"
                            android:drawableLeft="@drawable/ic_calculate"
                            android:text="Calcular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/unidadVolumen" />

                        <TextView
                            android:id="@+id/tvVolumen"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="12dp"
                            android:text="hola"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.495"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btnBorrarVolumen"
                            app:layout_constraintVertical_bias="0.57" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="120dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_cilindro"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/unidadVolumen"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="25dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.502"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtAlturaVolumen" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </TabHost>

</LinearLayout>
