<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GMSToRadianes.GMSToRadianesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_dise">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="151dp"
                android:layout_height="134dp"
                android:layout_marginTop="64dp"
                android:src="@drawable/ic_convertir"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/id_instrucciones_gms"
                android:layout_width="341dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Ingresa todos los datos solicitados de forma correcta y completa"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <EditText
                android:id="@+id/id_grados_gms"
                android:layout_width="92dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Grados"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_instrucciones_gms" />

            <EditText
                android:id="@+id/id_minutos_gms"
                android:layout_width="92dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Minutos"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toEndOf="@+id/id_grados_gms"
                app:layout_constraintTop_toBottomOf="@+id/id_instrucciones_gms" />

            <EditText
                android:id="@+id/editTextNumberDecimal3"
                android:layout_width="92dp"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="56dp"
                android:ems="10"
                android:hint="Segundos"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toEndOf="@+id/id_minutos_gms"
                app:layout_constraintTop_toBottomOf="@+id/id_instrucciones_gms" />

            <Button
                android:id="@+id/id_conv_gms"
                android:layout_width="155dp"
                android:layout_height="57dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="76dp"
                android:text="CONVERTIR"
                app:icon="@drawable/ic_convertir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_minutos_gms"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/id_eliminar_gms"
                android:layout_width="155dp"
                android:layout_height="57dp"
                android:layout_marginTop="76dp"
                android:text="BORRAR"
                app:icon="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.226"
                app:layout_constraintStart_toEndOf="@+id/id_conv_gms"
                app:layout_constraintTop_toBottomOf="@+id/id_minutos_gms"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>